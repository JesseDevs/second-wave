// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Product {
    id          Int       @id @default(autoincrement())
    name        String
    color       String
    price       Int
    size        String
    image       String
    brand       String
    description String
    type        String
    gender      String
    condition   String
    listerId    String
    messages    Message[]
}

model Message {
    id        Int     @id @default(autoincrement())
    name      String
    email     String
    phone     String
    message   String
    listingId Int
    listing   Product @relation(fields: [listingId], references: [id], onDelete: Cascade)
}
